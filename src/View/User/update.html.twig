{% extends 'layout.html.twig' %}
{% block title %}- Update Profile
{% endblock %}

{% block content %}
<div class="container mt-5">
    <div class="jumbotron my-5 bg-black text-white">
        {% if session.flash_message is not empty %}
        {% for message in session.flash_message %}
        <div class="col-12">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>{{message}}</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close" id="clear_flash">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
        {% endfor %}
        {% endif %}
        <form method="POST">
            <div class="form-group">
                <label for="email">Email address</label>
                <input type="email" class="form-control" id="email" name="email" value="{{user.email}}">
            </div>
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" class="form-control" id="username" name="username" value="{{user.username}}">
            </div>
            <input type="text" class="d-none" id="id" name="id" value="{{user.id}}">
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-yellow text-xl big-title">Update</button>
            </div>
        </form>
        <div class="text-center mt-5">
            <a href="/security/changePassword" class="text-red">Change password</button>
        </div>
    </div>
</div>
{% endblock %}
{% extends 'layout-admin.html.twig' %}
{% block title %}- Admin - Command{% endblock %}

{% block content %}
<div class="jumbotron my-5 bg-dark text-white">
    <h2 class="display-4">Commands :</h2>
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Address</th>
                <th scope="col">Total</th>
                <th scope="col">Date</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {% for command in commands %}
            <tr>
                <th scope="row">{{command.id}}</th>
                <td>{{command.name}}</td>
                <td>{{command.address}}</td>
                <td>{{command.total}} $</td>
                <td>{{command.created_at|date('Y-m-d')}}</td>
                <td>
                    <a href="/admin/deleteCommand/{{ command.id }}" class="btn btn-sm btn-danger"><i
                            class="fas fa-trash"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
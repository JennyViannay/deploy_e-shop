{% extends 'layout-admin.html.twig' %}
{% block title %}- Admin - Command{% endblock %}

{% block content %}
<div class="jumbotron my-5 bg-dark text-white">
    <h2 class="display-4">Sizes :</h2>
    <div class="float-right">
        <form method="POST">
            <div class="row mb-5">
                <div class="col-6">
                    <input type="number" class="form-control" id="size" name="size" placeholder="Add Size...">
                </div>
                <div class="col-6">
                    <button type="submit" class="btn btn-primary">Add Size</button>
                </div>
            </div>
        </form>
    </div>
    <table class="table table-dark text-center">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Size</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {% for size in sizes %}
            <tr>
                <th scope="row">{{size.id}}</th>
                <td>{{size.size}}</td>
                <td>
                    {% if size.is_used == false %}
                    <a href="/admin/deleteSize/{{size.id}}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
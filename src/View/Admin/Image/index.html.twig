{% extends 'layout-admin.html.twig' %}
{% block title %}- Admin - Command{% endblock %}

{% block content %}
<div class="jumbotron my-5 bg-dark text-white">
    <h2 class="display-4">Images :</h2>
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">URL</th>
                <th scope="col">ARTICLE_ID</th>
                <th scope="col">Preview</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {% for image in images %}
            <tr>
                <th scope="row">{{image.id}}</th>
                <td>{{image.url}}</td>
                <td>{{image.article_id}}</td>
                <td><img src="{{image.url}}" alt="{{image.article_id}}" class="img-fluid"></td>
                <td><a href="/admin/deleteImage/{{image.id}}" class="btn btn-danger"><i class="fas fa-trash"></i></a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
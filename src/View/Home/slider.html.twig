<section class="pt-5 pb-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 text-center bg-black p-3">
                <h3 class="big-title text-xl mt-3 text-white border-text">New sneakers </h3>
            </div>
            <div class="col-12">
                <div id="carouselExampleIndicators2" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="row">
                                {% for i in 0..2 %}
                                <div class="col-md-4 mb-3">
                                    <a href="/home/showArticle/{{articles[i].id}}">
                                        <div class="card">
                                            <img class="card-img-top" alt="100%x280" src="{{articles[i].images[0].url}}">
                                            <div class="card-body">
                                                <h4 class="card-title big-title text-black">{{articles[i].model}} |

{% extends 'layout.html.twig' %}
{% block title %}- Cart{% endblock %}

{% block content %}
<div class="container mt-5">
    {% if session.cart is empty %}
    <div class="jumbotron bg-black text-center" style="height: 350px">
        <h1 class="display-4 text-white big-title">Your cart is empty </h1>
        <a href="/home/articles" class="text-red text-lg">Return to shopping</a>
    </div>
    {% endif %}
    {% if session.cart is not empty and session.id is not defined %}
    <form method="POST">
        <table class="table">
            <thead class="text-center">
                <tr>
                    <th scope="col">Modele</th>
                    <th scope="col">Size</th>
                    <th scope="col">Qty</th>
                    <th scope="col">Price</th>
                    <th scope="col">Total</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>

            <tbody class="text-center">
                {% for article in cartInfos %}
                <tr>
                    <input type="text" class="d-none" name="id[]" value="{{article.id}}">
                    <td>{{article.model}}</td>
                    <td>{{article.size}}</td>
                    <td>
                        <select name="qty[]" id="qty">
                            <option value="{{article.qty}}">{{article.qty}}</option>
                            {% for i in 1..10 %}
                            {% if i != article.qty %}
                            <option value="{{i}}">{{i}}</option>
                            {% endif %}
                            {% endfor %}
                        </select>
                    </td>
                    <td>{{article.price}} $</td>
                    <td>{{article.price * article.qty }} $</td>
                    <td>
                        <a href="/home/cart/{{article.id}}" class=""><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="text-center my-5">
            <button type="submit" class="btn btn-yellow btn-lg big-title" name="update_cart">Update Cart</button>
        </div>
    </form>
    <div class="jumbotron bg-black text-center">
        <h2 class="text-white big-title">Total panier : {{total}} $</h2>
        <h3 class="big-title text-red text-center">
            <a href="/security/login" class="text-yellow">Log In</a> <br> <span class="text-white">or</span> <br>
